	keywords = {age structure, autocorrelation, autoregression, density dependence, stage structure, time series},
	pages = {321--337},
	file = {Full Text PDF:/Users/bryan/Zotero/storage/8L24RST7/Lande et al. - 2002 - Estimating Density Dependence from Population Time Series Using Demographic Theory and Life‐History.pdf:application/pdf},
