	journal = {Journal of Shellfish Research},
	author = {Ayvazian, Suzanne and Gerber-Williams, Anna and Grabbert, Sinead and Miller, Kenneth and Hancock, Boze and Helt, William and Cobb, Donald and Strobel, Charles},
	month = dec,
	year = {2020},
	pmid = {33551544},
	pmcid = {PMC7859913},
	pages = {563--587},
	file = {PubMed Central Full Text PDF:/Users/bryan/Zotero/storage/ENGYXD2T/Ayvazian et al. - 2020 - Habitat benefits of restored oyster reefs and aquaculture to fish and invertebrates in a coastal pon.pdf:application/pdf},
