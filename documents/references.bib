	file = {Full Text PDF:/Users/bryan/Zotero/storage/IE98D5B7/Bell et al. - 2022 - Climate-induced habitat changes in commercial fish stocks.pdf:application/pdf;Snapshot:/Users/bryan/Zotero/storage/5NWU843L/6710433.html:text/html},
}

