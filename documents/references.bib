	pages = {240--251},
	file = {Full Text PDF:/Users/bryan/Zotero/storage/2HWT6SKV/Wirgin et al. - 2014 - Coastwide Stock Structure of Winter Flounder Using Nuclear DNA Analyses.pdf:application/pdf;Snapshot:/Users/bryan/Zotero/storage/RQIEYALG/00028487.2013.html:text/html},
